
{
  "compilerOptions": {
    "lib": [
      "ESNext",
    ],
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts", "./scripts/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
